<h1>Insert the form to edit an instance of your model here.</h1>

    <form action='/advocates/<%= @advocate.slug %>' method='post'>
      <input type='hidden' name='_method' value='patch'>
      <div class="form-group">
        <%# <% binding.pry %> 
        <label for="name">Name <span style="color:red;"><%= @user&.errors&.[](:name)&.[](0) %></span></label><br>
        <input type="text" name="advocate[name]" id="name" class="form-control" value="<%= @advocate.name%>" aria-describedby="helpId"><br>
        <label for="email">E-mail <span style="color:red;"><%= @user&.errors&.[](:email)&.[](0) %></span></label><br>
        <input type="text" name="advocate[email]" id="email" class="form-control" value="<%= @advocate.email%>" aria-describedby="helpId"><br>
        <%# <small id="helpId" class="text-muted">Help text</small><br> %>
        <label for="password">Password  <span style="color:red;"><%= @user&.errors&.[](:password)&.[](0) %></span></label><br>
        <input type="text" name="advocate[password]" id="password" class="form-control" value="<%= @advocate.password%>"" aria-describedby="helpId"><br>
        <label for="password_confirmation">Password Confirmation <span style="color:red;"><%= @user&.errors&.[](:password_confirmation)&.[](0) %></span></label><br>
        <input type="text" name="advocate[password_confirmation]" id="password_confirmation" class="form-control" placeholder="Confirm New Password" aria-describedby="helpId"><br>
        <%# <small id="helpId" class="text-muted">Help text</small><br> %>
        <button type="submit" class="btn btn-primary">Create Account</button> Or
        <a href="/advocates/registration" class="badge badge-primary">Sign In</a> If You Already Have An Acount.
      </div>
    </form>
