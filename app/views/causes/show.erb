<h1><%= @cause.name %></h1>

<div style="background-color: lightblue;hight:100px;width:550px">

  <img src="../<%= @cause.image_link %>" alt="<%= @cause.name %>" width="120" height="130" style="vertical-align:middle;float:left;margin:0px 50px" >

  <p><%= @cause.description %></p>

  <form action="/donations/new" method='get'>
    <% current_user.causes << @cause %>
    <button type="submit" class="btn btn-primary">Support This Cause</button>
  </form>            
</div>