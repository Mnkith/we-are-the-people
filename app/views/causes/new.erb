<h1>New Cause Information</h1>

<form action="/causes" method="post">

  <div class="form-group" style="width: 500px;position: relative;left: 280px">

    <label for="name">Name <span style="color:red;"><%= flash&.[](:errors)&.[](:name)&.[](0) %></span></label><br>
    <input type="text" name="cause[name]" id="name" class="form-control" value="<%= @cause&.name%>" aria-describedby="helpId" ><br>

    <label for="description">Description <span style="color:red;"><%= flash&.[](:errors)&.[](:description)&.[](0) %></span></label><br>
    <textarea name="cause[description]" id="description" class="form-control"  aria-describedby="helpId" ><%= @cause&.description %></textarea><br>

    <label for="goal">Goal <span style="color:red;"><%= flash&.[](:errors)&.[](:goal)&.[](0) %></span></label><br>
    <input type="text" name="cause[goal]" id="goal" class="form-control" value="<%= @cause&.goal%>" aria-describedby="helpId" ><br>

    <button type="submit" class="btn btn-primary">Create Cause</button>
  </div>
</form>
